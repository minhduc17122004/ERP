<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Book Form View -->
    <record id="view_library_book_form" model="ir.ui.view">
        <field name="name">library.book.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form string="Sách">
                <header>
                    <button name="action_set_available" string="Đặt có sẵn" type="object" class="btn-primary" states="maintenance,damaged"/>
                    <button name="action_set_maintenance" string="Bảo trì" type="object" states="available"/>
                    <button name="action_set_damaged" string="Hư hỏng" type="object" states="available,maintenance"/>
                    <button name="action_set_lost" string="Thất lạc" type="object" states="available,borrowed,maintenance,damaged"/>
                    <field name="state" widget="statusbar" statusbar_visible="available,borrowed,maintenance,damaged,lost"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_borrowings" type="object" class="oe_stat_button" icon="fa-history">
                            <field name="borrowing_count" widget="statinfo" string="Lần mượn"/>
                        </button>
                    </div>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Tên sách"/>
                        </h1>
                        <h3>
                            <field name="code" readonly="1"/>
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="author_id"/>
                            <field name="category_id"/>
                            <field name="isbn"/>
                            <field name="language"/>
                            <field name="rating" widget="priority"/>
                        </group>
                        <group>
                            <field name="publisher"/>
                            <field name="publication_date"/>
                            <field name="edition"/>
                            <field name="pages"/>
                            <field name="price"/>
                            <field name="location"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Mô tả" name="description">
                            <field name="description" placeholder="Mô tả chi tiết về cuốn sách..."/>
                        </page>
                        <page string="Tóm tắt" name="summary">
                            <field name="summary" placeholder="Tóm tắt nội dung sách..."/>
                        </page>
                        <page string="Từ khóa" name="tags">
                            <field name="tags" placeholder="Các từ khóa cách nhau bởi dấu phẩy"/>
                        </page>
                        <page string="Lịch sử mượn" name="borrowings">
                            <field name="borrowing_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="member_id"/>
                                    <field name="borrow_date"/>
                                    <field name="due_date"/>
                                    <field name="return_date"/>
                                    <field name="state"/>
                                    <field name="fine_amount"/>
                                </list>
                            </field>
                        </page>
                        <page string="Đang mượn" name="current_borrowing" attrs="{'invisible': [('state', '!=', 'borrowed')]}">
                            <group>
                                <field name="current_borrowing_id" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Book list View -->
    <record id="view_library_book_list" model="ir.ui.view">
        <field name="name">library.book.list</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <list string="Sách" decoration-success="state=='available'" decoration-info="state=='borrowed'" decoration-warning="state=='maintenance'" decoration-danger="state=='lost'">
                <field name="code"/>
                <field name="name"/>
                <field name="author_id"/>
                <field name="category_id"/>
                <field name="isbn"/>
                <field name="publication_date"/>
                <field name="state"/>
                <field name="location"/>
                <field name="borrowing_count"/>
            </list>
        </field>
    </record>

    <!-- Book Kanban View -->
    <record id="view_library_book_kanban" model="ir.ui.view">
        <field name="name">library.book.kanban</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <kanban string="Sách" default_group_by="state">
                <field name="id"/>
                <field name="name"/>
                <field name="author_id"/>
                <field name="category_id"/>
                <field name="state"/>
                <field name="rating"/>
                <field name="image"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('library.book', 'image', record.id.raw_value)" alt="Book Cover"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="author_id"/>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <field name="category_id"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="rating" widget="priority"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span class="badge" t-att-class="'badge-' + (record.state.raw_value == 'available' ? 'success' : record.state.raw_value == 'borrowed' ? 'info' : 'warning')">
                                            <field name="state"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Book Search View -->
    <record id="view_library_book_search" model="ir.ui.view">
        <field name="name">library.book.search</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm sách">
                <field name="name" string="Tên sách"/>
                <field name="code" string="Mã sách"/>
                <field name="author_id" string="Tác giả"/>
                <field name="category_id" string="Thể loại"/>
                <field name="isbn"/>
                <field name="tags" string="Từ khóa"/>
                <separator/>
                <filter string="Có sẵn" name="available" domain="[('state', '=', 'available')]"/>
                <filter string="Đã mượn" name="borrowed" domain="[('state', '=', 'borrowed')]"/>
                <filter string="Bảo trì" name="maintenance" domain="[('state', '=', 'maintenance')]"/>
                <filter string="Hư hỏng" name="damaged" domain="[('state', '=', 'damaged')]"/>
                <filter string="Thất lạc" name="lost" domain="[('state', '=', 'lost')]"/>
                <separator/>
                <filter string="Hoạt động" name="active" domain="[('active', '=', True)]"/>
                <separator/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Tác giả" name="group_author" context="{'group_by': 'author_id'}"/>
                    <filter string="Thể loại" name="group_category" context="{'group_by': 'category_id'}"/>
                    <filter string="Trạng thái" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Ngôn ngữ" name="group_language" context="{'group_by': 'language'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Book Action -->
    <record id="action_library_book" model="ir.actions.act_window">
        <field name="name">Sách</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="view_library_book_search"/>
        <field name="context">{'search_default_available': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Thêm cuốn sách đầu tiên
            </p>
            <p>
                Quản lý tất cả sách trong thư viện.
            </p>
        </field>
    </record>
</odoo> 