<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record id="view_hospital_patient_list" model="ir.ui.view">
            <field name="name">hospital.patient.list</field>
            <field name="model">my.hospital.patient</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="dob"/>
                    <field name="age"/>
                    <field name="gender"/>
                    <field name="doctor_id"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_hospital_patient_form" model="ir.ui.view">
            <field name="name">hospital.patient.form</field>
            <field name="model">my.hospital.patient</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="dob"/>
                                <field name="age" readonly="1"/>
                            </group>
                            <group>
                                <field name="gender"/>
                                <field name="doctor_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Notes">
                                <field name="note"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_hospital_patient" model="ir.actions.act_window">
            <field name="name">Patients</field>
            <field name="res_model">my.hospital.patient</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Patient!
                </p>
                <p>
                    Click the "New" button to register a new patient.
                </p>
            </field>
        </record>

        <!-- Root Menu -->
        <menuitem id="menu_hospital_root" name="Hospital" sequence="10"/>

        <!-- Sub Menu -->
        <menuitem id="menu_hospital_patient" 
                  name="Patients" 
                  parent="menu_hospital_root" 
                  action="action_hospital_patient" 
                  sequence="10"/>

    </data>
</odoo> 